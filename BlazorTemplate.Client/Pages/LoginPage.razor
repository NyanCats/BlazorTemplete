@page "/login"
@layout MainLayout

@using Microsoft.AspNetCore.Blazor.Services
@using BlazorTemplate.Shared.WebApis.Sessions

@inject HttpClient Http
@inject WebAssemblyUriHelper UriHelper
@inject AccountService AccountService
@inject SessionService SessionService

<div class="container col-md-8" id="login-page">
    <div class="card">
        <div class="card-header">
            <h3>ログイン</h3>
        </div>
        <div class="card-body">
            <form onsubmit="@LoginAccount" method="post">

                <div class="form-group">
                    <label for="username">ユーザー名</label>
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text">
                                <i class="icon-user"></i>
                            </span>
                        </div>
                        <input id="username" class="form-control" type="text" placeholder="UserName" bind="@UserName" />
                    </div>
                </div>

                <div class="form-group">
                    <label for="password">パスワード</label>
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text">
                                <i class="icon-key"></i>
                            </span>
                        </div>
                        <input id="password" class="form-control" type="text" placeholder="Password" bind="@Password" />
                    </div>
                </div>

                <div class="form-group">
                    <div class="text-center">
                        <button class="btn btn-primary px-4" type="submit">ログインする</button>
                    </div>
                </div>
            </form>
            @foreach (var error in Errors)
            {
                <span class="alert alert-danger small" role="alert" style="padding: .25rem .25rem;">@error</span>
            }
        </div>
    </div>
</div>

@functions
{
    string UserName { get; set; }
    string Password { get; set; }

    List<string> Errors { get; set; } = new List<string>();

    async Task LoginAccount()
    {
        Errors.Clear();

        LoginResult result = await SessionService.Login(Http, new LoginRequest() { UserName = UserName, Password = Password });

        if (result == null) { return; }
        if (0 < result.Errors.Count)
        {
            Errors.AddRange(result.Errors);
            return;
        }

        await AccountService.GetUserInfomation(Http);

        UriHelper.NavigateTo("/");

        StateHasChanged();
    }

}
